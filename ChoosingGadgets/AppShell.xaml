<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChoosingGadgets.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChoosingGadgets"
    xmlns:views="clr-namespace:ChoosingGadgets.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Выбор гаджетов">

    <ShellContent Title="Главная" ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage"/>
    <ShellContent Title="Выбор ноутбука" ContentTemplate="{DataTemplate views:ChooseLaptopPage}" Route="ChooseLaptopPage"/>
    <ShellContent Title="Выбор смартфона" ContentTemplate="{DataTemplate views:ChooseSmartphonePage}" Route="ChooseSmartphonePage"/>
    <ShellContent Title="Выбор консоли" ContentTemplate="{DataTemplate views:ChooseConsolePage}" Route="ChooseConsolePage"/>
</Shell>
